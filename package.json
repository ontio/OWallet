{
  "name": "owallet",
  "productName": "OWallet",
  "homepage": "http://ont.io",
  "version": "v0.9.21",
  "author": "Ontology Foundation Ltd. <devops@ont.io>",
  "description": "OWallet is a comprehensive Ontology desktop wallet",
  "license": "Apache-2.0",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js",
    "build:darwin": "cross-env BUILD_TARGET=darwin node .electron-vue/build.js",
    "build:linux": "cross-env BUILD_TARGET=linux node .electron-vue/build.js",
    "build:mas": "cross-env BUILD_TARGET=mas node .electron-vue/build.js",
    "build:win32": "cross-env BUILD_TARGET=win32 node .electron-vue/build.js",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "package": "npm run pack && electron-builder -mwl",
    "packageMac": "yarn run pack && electron-builder --mac --x64",
    "packageWin": "yarn run pack && electron-builder --win --x64",
    "packageLin": "yarn run pack && electron-builder --linux --x64",

    "electron-rebuild": "electron-rebuild --force --module_dir . -w node-hid"
  },
  "build": {
    "productName": "OWallet",
    "appId": "org.ont.wallet",
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.prod.js",
      "main.prod.js.map",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "build/icons"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^1.1.16",
    "@ledgerhq/hw-transport-node-hid": "^4.13.0",
    "@xkeshi/vue-qrcode": "^1.0.0",
    "ant-design-vue": "^1.1.9",
    "asar": "^0.14.3",
    "axios": "^0.18.0",
    "bignumber.js": "^7.2.1",
    "bootstrap": "^4.1.1",
    "clipboard": "^2.0.1",
    "dateformat": "^3.0.3",
    "electron-winstaller": "^2.6.4",
    "elliptic": "^6.4.1",
    "fibers": "^4.0.2",
    "font-awesome": "^4.7.0",
    "global": "^4.3.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.11",
    "nedb": "^1.8.0",
    "node-hid": "^0.7.7",
    "node-sass": "^4.13.0",
    "numeral": "^2.0.6",
    "ontology-ts-sdk": "^1.1.0",
    "opn": "^5.4.0",
    "popper.js": "^1.14.3",
    "sass": "^1.24.4",
    "sass-loader": "^7.3.0",
    "vee-validate": "^2.1.0-beta.7",
    "vue": "^2.3.3",
    "vue-axios": "^2.1.1",
    "vue-clipboard2": "^0.2.1",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^8.0.0",
    "vue-router": "^2.5.3",
    "vuedraggable": "^2.16.0",
    "vuex": "^2.3.1",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-import": "^1.11.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^1.1.3",
    "chalk": "^2.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^1.0.1",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.16",
    "electron-builder": "^20.19.2",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "electron-packager": "^12.1.0",
    "electron-rebuild": "^1.8.1",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype-errors": "^3.6.0",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.5.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.74.0",
    "flow-webpack-plugin": "^1.2.0",
    "html-webpack-plugin": "^2.30.1",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "style-loader": "^0.18.2",
    "url-loader": "^1.0.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^13.7.2",
    "vue-style-loader": "^3.1.2",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.2",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.18.2"
  }
}
